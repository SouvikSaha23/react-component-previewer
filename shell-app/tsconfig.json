{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
		  "outDir": "out",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx"
    },
    "include": [
      "**/*"
    ],
    "exclude": [
      "**/node_modules/*",
      "./dist/**/*",
      "./out/**/*"
    ],
  }